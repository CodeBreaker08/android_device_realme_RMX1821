<resources>

    <!-- Disable UI touch sounds by default -->
    <bool name="def_sound_effects_enabled">false</bool>

    <!-- Disable auto brightness  -->
    <bool name="def_screen_brightness_automatic_mode">false</bool>

    <!-- Set Default Animation Scale  -->
    <fraction name="def_window_animation_scale">70%</fraction>
    <fraction name="def_window_transition_scale">70%</fraction>

    <!-- Disable bluetooth by default -->
    <bool name="def_bluetooth_on">false</bool>

    <!-- Default for Settings.Secure.WAKE_GESTURE_ENABLED -->
    <bool name="def_wake_gesture_enabled">false</bool>

    <!-- Default for Settings.System.VIBRATE_IN_SILENT -->
    <bool name="def_vibrate_in_silent">false</bool>

    <!-- Default for Settings.System.VIBRATE_WHEN_RINGING -->
    <bool name="def_vibrate_when_ringing">true</bool>

</resources>
